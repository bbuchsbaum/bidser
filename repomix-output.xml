        theme(
          axis.text.x = element_text(angle = 45, hjust = 1),
          panel.grid.major = element_blank(),
          panel.grid.minor = element_blank()
        )
    } else {
      # No sessions and no tasks: subject x type
      completeness_data <- raw_data %>%
        filter(!is.na(subid), !is.na(type)) %>%
        group_by(subid, type) %>%
        summarize(
          has_data = n() > 0,
          file_count = n(),
