           )
      
      if (interactive) {
        tryCatch({
          p <- plotly::ggplotly(p)
        }, error = function(e) {
          if (debug) cat("Error making plot interactive:", e$message, "\n")
        })
      }
      
      return(p)
    } else {
      # No data at all
      p <- ggplot2::ggplot() + 
           ggplot2::annotate("text", x = 0.5, y = 0.5, 
