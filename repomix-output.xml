#'
#' # Specify mode for large datasets
#' bigvec_scans <- read_preproc_scans(proj, mode="bigvec")
#'
#' # Provide a custom mask
#' mask <- create_preproc_mask(proj, thresh=0.95)
#' masked_scans <- read_preproc_scans(proj, mask=mask)
#' }
